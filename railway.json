{
    "build": {
        "builder": "nixpacks",
        "buildCommand": "composer install && npm run build",
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}"
    },
    "deploy": {
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
        "restartPolicy": "on-failure"
    }
}