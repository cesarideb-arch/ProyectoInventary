{
    "build": {
        "builder": "nixpacks",
        "buildCommand": "composer install && &npm install & npm run build",
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT:-8080}"
    },
    "deploy": {
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT:-8080}",
        "restartPolicy": "on-failure"
    }
}